<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".userSection.TableHome">

    <ImageView
            android:layout_width="239dp"
            android:layout_height="212dp" app:srcCompat="@drawable/logo" android:id="@+id/sidelogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>

    <Button
            android:text="Quick Order"
            android:layout_width="399dp"
            android:layout_height="61dp" android:id="@+id/quickorder"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.537" app:layout_constraintVertical_bias="0.483"
            android:elevation="20dp" android:background="@drawable/button_selector"
            android:fontFamily="serif-monospace" android:typeface="sans" android:textSize="30sp"
            android:lineSpacingExtra="10sp" android:textAlignment="center" android:textStyle="bold"
            android:textColor="@color/button_color_selector"/>
    <Button
            android:text="Customize Your Pizza"
            android:layout_width="399dp"
            android:layout_height="61dp" android:id="@+id/customizePizza"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/quickorder" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.274" android:elevation="20dp"
            android:background="@drawable/button_selector" android:fontFamily="serif-monospace"
            android:typeface="sans" android:textSize="30sp" android:lineSpacingExtra="10sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/button_color_selector"
            app:layout_constraintHorizontal_bias="0.537"/>
    <TextView
            android:text="-----------------------------------------------------------------------------------------------------------------------------------------------------------------"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="13dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/AdminLogin" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="@color/colorText"
            android:textSize="18sp" android:fontFamily="serif-monospace" android:typeface="normal"
            android:lineSpacingExtra="10sp" android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="366dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="417dp"
            app:layout_constraintHorizontal_bias="0.535" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp" android:text="@string/PowerdByTxt"/>
    <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="142dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/page" android:id="@+id/imageView4"/>
        <TextView
                android:text="Table No."
                android:layout_width="92dp"
                android:layout_height="23dp" android:id="@+id/holdTblIdTxt" android:layout_marginBottom="27dp"
                android:layout_alignBottom="@+id/imageView4" android:layout_marginTop="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_alignEnd="@+id/imageView4"
                android:textStyle="bold|italic" android:layout_marginStart="13dp"
                android:layout_alignStart="@+id/imageView4"
                android:textAlignment="center" android:textColor="@android:color/black" android:textSize="14sp"
                android:textAllCaps="true" android:gravity="center"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>