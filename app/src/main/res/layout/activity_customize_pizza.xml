<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".userSection.CustomizePizza">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Small"
              android:background="@drawable/button_selector" android:id="@+id/smallText"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:fontFamily="serif-monospace"
              android:typeface="serif" android:textSize="30sp" android:lineSpacingExtra="10sp"
              android:textStyle="bold" android:textAlignment="center" android:textColor="@color/colorText"
              app:layout_constraintHorizontal_bias="0.056" app:layout_constraintVertical_bias="0.289"
              android:gravity="center"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Medium"
              android:background="@drawable/button_selector"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.056"
              app:layout_constraintVertical_bias="0.515" android:id="@+id/mediumText"
              android:fontFamily="serif-monospace" android:typeface="serif" android:textSize="30sp"
              android:lineSpacingExtra="10sp" android:textAlignment="center" android:textStyle="bold"
              android:textColor="@color/colorText" android:gravity="center"/>
    <ImageView
            android:layout_width="514dp"
            android:layout_height="553dp" app:srcCompat="@drawable/twodough"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView"
            app:layout_constraintVertical_bias="0.502" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.819"/>
    <TextView
            android:text="Large"
            android:background="@drawable/button_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/largeText" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.735"
            android:fontFamily="serif-monospace" android:typeface="serif" android:textSize="30sp"
            android:lineSpacingExtra="10sp" android:textAlignment="center" android:textStyle="bold"
            android:textColor="@color/colorText" app:layout_constraintHorizontal_bias="0.056" android:gravity="center"/>
    <TextView
            android:background="@color/transparent"
            android:text="@string/bread_title_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/headText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.051" android:fontFamily="serif-monospace" android:typeface="serif"
            android:textSize="38sp" android:lineSpacingExtra="10sp" android:textAlignment="center"
            android:textStyle="bold" android:textColor="@color/colorText"/>
    <ImageView
            android:background="@color/transparent"
            android:layout_width="156dp"
            android:layout_height="134dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView10" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/smallText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>