<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".userSection.HomeScreen">

    <ImageView
            android:layout_width="311dp"
            android:layout_height="209dp" app:srcCompat="@drawable/logo" android:id="@+id/sidelogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="116dp" android:layout_marginStart="8dp"
    />

    <Button
            android:text="Table Login"
            android:layout_width="391dp"
            android:layout_height="61dp" android:id="@+id/tableLogin"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:elevation="20dp"
            android:background="@drawable/button_selector" android:fontFamily="serif-monospace"
            android:typeface="sans" android:textSize="30sp" android:lineSpacingExtra="10sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/button_color_selector"
            app:layout_constraintBottom_toTopOf="@+id/AdminLogin"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/sidelogo"
            app:layout_constraintVertical_bias="0.537"/>

    <Button
            android:text="Admin Login"
            android:layout_width="391dp"
            android:layout_height="61dp" android:id="@+id/AdminLogin"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:elevation="20dp"
            android:background="@drawable/button_selector" android:fontFamily="serif-monospace"
            android:typeface="sans" android:textSize="30sp" android:lineSpacingExtra="10sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/button_color_selector"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sidelogo" app:layout_constraintVertical_bias="0.495"/>
    <TextView
            android:text="-----------------------------------------------------------------------------------------------------------------------------------------------------------------"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="21dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/AdminLogin" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="1.0" android:textSize="14sp"/>
    <TextView
            android:text="@string/PowerdByTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="@color/colorText"
            android:textSize="18sp" android:fontFamily="serif-monospace" android:typeface="normal"
            android:lineSpacingExtra="10sp" android:textStyle="bold|italic" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="366dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="417dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"/>
</android.support.constraint.ConstraintLayout>