<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_admin_panel_home"
        tools:context=".adminSection.admin_panel_home">
    <TextView
            android:text="ADD Existing Pizza:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="viewStart"
            android:textStyle="bold" android:textSize="24sp"
            android:textAllCaps="true" android:textColor="#85F44336"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/adminPanelLogo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="122dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="315dp"/>
    <TextView
            android:id="@+id/adminPanelLogo"
            android:text="Admin Panel"
            android:scrollbars="vertical"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="#85F44336"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" android:textAllCaps="true"/>
    <RelativeLayout
            android:layout_width="438dp"
            android:layout_height="239dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/adminPanelLogo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/relativeLayout">
        <EditText android:layout_width="430dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/nametxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Side Item Name"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_marginStart="8dp"
                  android:layout_marginEnd="0dp"
                  android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                  android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:textSize="14sp"/>
        <EditText android:layout_width="437dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/pricetxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Price of Item"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_alignTop="@+id/nametxt"
                  android:layout_marginTop="62dp" android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp" android:inputType="number" android:textSize="14sp"/>
        <EditText android:layout_width="437dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/quntytxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Default Qunatity"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_alignTop="@+id/nametxt"
                  android:layout_marginTop="128dp" android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp" android:inputType="number" android:textSize="14sp"/>
        <Button
                android:text="INSERT"
                android:background="@drawable/button_selector"
                android:textColor="@color/button_color_selector"
                android:shadowColor="@android:color/transparent"
                android:layout_width="140dp"
                android:layout_height="36dp" android:id="@+id/insertSideItemsBtn"
                android:onClick="insertNewSideItems" android:layout_marginStart="150dp"
                android:layout_alignStart="@+id/nametxt" android:layout_marginTop="188dp"
                android:layout_alignParentTop="true"/>


    </RelativeLayout>
    <TextView
            android:text="ADD New Side Items:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/adminPanelLogo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout" android:textAlignment="viewStart"
            android:textStyle="bold" android:textSize="24sp" app:layout_constraintVertical_bias="1.0"
            android:textAllCaps="true" android:textColor="#85F44336"/>
    <RelativeLayout
            android:layout_width="441dp"
            android:layout_height="300dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout" app:layout_constraintHorizontal_bias="0.516"
            tools:ignore="MissingConstraints" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <EditText android:layout_width="430dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/pNametxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Pizza Name?"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_marginStart="8dp"
                  android:layout_marginEnd="0dp"
                  android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                  android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:textSize="14sp"/>
        <EditText android:layout_width="437dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/pPricetxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Price of Pizza?"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_alignTop="@+id/pNametxt"
                  android:layout_marginTop="62dp" android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp" android:inputType="number" android:textSize="14sp"/>
        <EditText android:layout_width="437dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:id="@+id/pQuntytxt"
                  android:background="@color/overlayBackground"
                  android:hint="Enter Default Qunatity"
                  android:textStyle="bold|italic"
                  android:textAlignment="center" android:gravity="center" android:layout_alignTop="@+id/pNametxt"
                  android:layout_marginTop="128dp" android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp" android:inputType="number" android:textSize="14sp"/>

        <EditText android:layout_width="448dp"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:textColor="@color/colorText"
                  android:textColorHint="@color/colorText"
                  android:textColorHighlight="@color/colorAccent"
                  android:background="@color/overlayBackground"
                  android:hint="Add Some Description?"
                  android:id="@+id/pDesctxt"
                  android:layout_alignTop="@+id/pNametxt" android:layout_marginTop="189dp"
                  android:layout_marginStart="0dp" android:layout_alignStart="@+id/pNametxt"
                  android:layout_marginEnd="2dp" android:layout_alignEnd="@+id/pNametxt"
                  android:inputType="text" android:textStyle="italic" android:textAlignment="center"
                  android:gravity="center"/>
        <Button
                android:text="INSERT"
                android:background="@drawable/button_selector"
                android:textColor="@color/button_color_selector"
                android:shadowColor="@android:color/transparent"
                android:layout_width="140dp"
                android:layout_height="36dp" android:id="@+id/insertPizzaBtn"
                android:layout_alignStart="@+id/pNametxt"
                android:onClick="insertNewPizza" android:layout_marginStart="155dp" android:layout_marginTop="254dp"
                android:layout_alignParentTop="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>