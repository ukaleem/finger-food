<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".userSection.GetStarted">


    <TextView
            android:text="Want To Make Pizza?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.128"
            android:fontFamily="serif-monospace" android:typeface="normal" android:textSize="36sp"
            android:lineSpacingExtra="8sp" android:textColor="@color/colorText" android:textStyle="bold"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.59"/>
    <ImageView
            android:layout_width="215dp"
            android:layout_height="187dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintVertical_bias="0.046"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="360dp"
            android:layout_height="92dp"
            android:background="@drawable/button_selector"
            android:shadowColor="@android:color/transparent"
            android:id="@+id/getBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.943"
            android:fontFamily="serif-monospace" android:typeface="normal" android:textSize="30sp"
            android:lineSpacingExtra="10sp" android:textColor="@color/button_color_selector" android:textAllCaps="false"
            android:textStyle="bold" android:textAlignment="center"/>
    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:src="@drawable/pizza"
            android:layout_width="454dp"
            android:layout_height="434dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>