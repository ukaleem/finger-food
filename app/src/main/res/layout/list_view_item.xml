<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/listCard"
            android:background="@color/colorCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="@color/colorCard" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="16dp" app:cardCornerRadius="25dp"
            app:cardElevation="20dp">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <ImageView
                    android:layout_width="137dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/garlicsupreme"
                    android:id="@+id/listImage"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.009" app:layout_constraintVertical_bias="0.015"/>

            <TextView
                    android:text="Chooza Pizza Payaz wala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_Text" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:fontFamily="serif-monospace" android:typeface="normal"
                    android:textSize="36sp" android:lineSpacingExtra="10sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintHorizontal_bias="0.411"/>
            <TextView
                    android:text="Topped with Seekh Kabab chunks on tantalizing blend of spicy chicken, onions, capsicum, green pepper and cheese"
                    android:layout_width="430dp"
                    android:layout_height="78dp" android:id="@+id/description_Text"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.366"
                    android:fontFamily="sans-serif-thin"
                    android:typeface="normal" android:textSize="18sp" android:lineSpacingExtra="8sp"
                    android:textStyle="bold|italic" android:textAlignment="center"
                    android:textColor="@color/colorText" android:gravity="center"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/item_Text"/>
            <TextView
                    android:text="Price:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/priceTag"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.802"
                    android:fontFamily="serif-monospace"
                    android:typeface="normal" android:textSize="30sp" android:lineSpacingExtra="10sp"
                    android:textStyle="bold" android:textAlignment="center" android:textColor="@color/colorText"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/item_Text"/>
            <TextView
                    android:text="65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/priceText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.918"
                    android:fontFamily="serif-monospace"
                    android:typeface="normal" android:textSize="30sp" android:lineSpacingExtra="10sp"
                    android:textStyle="bold" android:textAlignment="center" android:textColor="@color/colorText"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/item_Text"/>
      <!--      <TextView
                    android:layout_width="45dp"
                    android:layout_height="45dp" android:id="@+id/countText"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.745"
                    app:layout_constraintVertical_bias="0.866" android:fontFamily="serif-monospace"
                    android:typeface="normal" android:textSize="30sp" android:lineSpacingExtra="10sp"
                    android:textAlignment="center" android:textColor="@color/colorText" android:text='""'/>
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/plusbtn" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.665"
                    app:layout_constraintVertical_bias="0.827" android:background="@drawable/ic_plus"/> -->
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/button_color_selector"
                    android:id="@+id/done_btn"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.943"
                    android:background="@drawable/button_selector"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/priceTag"
                    app:layout_constraintVertical_bias="0.214"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/quantityText" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:fontFamily="serif-monospace" android:typeface="serif"
                    android:textSize="24sp" android:lineSpacingExtra="10sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@color/colorText"
                    android:hint="Enter Quantity Here"
                    app:layout_constraintHorizontal_bias="0.344"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/description_Text"
                    app:layout_constraintVertical_bias="0.044"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>