<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".userSection.SauceTopping">

    <TextView
            android:text="Wheet Bread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breadNameLbl" android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="italic" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/breadTbl"
            android:textAlignment="viewStart" android:gravity="center"
            tools:ignore="RtlCompat" app:layout_constraintStart_toEndOf="@+id/imageView7"
    />
    <TextView
            android:text="large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breadSizeLbl" android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/breadNameLbl"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/breadPriceLbl" android:textAlignment="viewStart"
            android:gravity="center" tools:ignore="RtlCompat" app:layout_constraintStart_toEndOf="@+id/imageView5"
    />
    <ImageView
            android:layout_width="78dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_hdr_strong_selected_24dp"
            android:id="@+id/imageView7" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/breadTbl" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imagedough" android:layout_marginStart="78dp"/>
    <ImageView
            android:layout_width="78dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_hdr_strong_selected_24dp"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginStart="78dp"
            app:layout_constraintStart_toEndOf="@+id/imagedough"/>
    <TextView
            android:text="SAUCES DETAILS:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sauceTbl" android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/breadTbl"/>
    <TextView
            android:text="Tomato Rs/50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tomatoTxt"
            android:textColor="#ffffff" android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/tomatoSauseImg"
            app:layout_constraintTop_toTopOf="@+id/tomatoSauseImg" android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="@+id/tomatoSauseImg" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/thankYouTbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="serif-monospace"
            android:lineSpacingExtra="10sp"
            android:text="Select Sauce here!"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="46sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.033" app:layout_constraintHorizontal_bias="0.555"/>

    <ImageView
            android:id="@+id/imagedough"
            android:layout_width="469dp"
            android:layout_height="516dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/twodough" app:layout_constraintHorizontal_bias="0.309"
            app:layout_constraintVertical_bias="0.422"/>

    <ImageView
            android:id="@+id/tomatoSauseImg"
            android:layout_width="82dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.373"
            app:srcCompat="@drawable/tomatosauce"/>

    <ImageView
            android:id="@+id/cheezImg"
            android:layout_width="105dp"
            android:layout_height="89dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.605"
            app:srcCompat="@drawable/cheez"/>
    <ImageView
            android:layout_width="156dp"
            android:layout_height="134dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Cheez Rs/80"
            android:layout_width="95dp"
            android:layout_height="31dp"
            android:id="@+id/cheezTxt" android:textColor="#ffffff"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/cheezImg"
            android:layout_marginStart="16dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@+id/cheezImg"/>
    <TextView
            android:text="You have Selected:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedItemsLbl" android:textSize="36sp"
            android:textColor="#ffffff" android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thankYouTbl" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.71"/>
    <ImageView
            android:layout_width="58dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_done_black_24dp"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/selectedItemsLbl"
            app:layout_constraintBottom_toBottomOf="@+id/selectedItemsLbl"/>
    <TextView
            android:text="BREAD DETAILS:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breadTbl" android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="@+id/selectedItemsLbl" android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="78dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_hdr_strong_selected_24dp"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            android:layout_marginStart="78dp" app:layout_constraintStart_toEndOf="@+id/imagedough"/>
    <TextView
            android:text="Rs.3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breadPriceLbl" android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/breadSizeLbl"
            android:textAlignment="textStart"
            android:gravity="center" tools:ignore="RtlCompat" app:layout_constraintStart_toEndOf="@+id/imageView6"
    />
    <Button
            android:text="Next Choose Topings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saucesNextOrderBtn"
            android:textColor="@color/button_color_selector"
            android:shadowColor="@android:color/transparent"
            android:background="@drawable/button_selector"
            android:padding="15dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="72dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.384"/>
    <ImageView
            android:layout_width="78dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_hdr_strong_selected_24dp"
            android:id="@+id/imageView8"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sauceTbl" android:layout_marginStart="79dp"
            app:layout_constraintStart_toEndOf="@+id/imagedough"
            app:layout_constraintEnd_toStartOf="@+id/tomatoSauceQuantity"/>
    <ImageView
            android:layout_width="78dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_hdr_strong_selected_24dp"
            android:id="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/imageView8"
    />
    <TextView
            android:text="Tomato Sauces ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tomatoSauceQuantity" android:textColor="#ffffff"
            android:textStyle="italic" android:textSize="24sp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sauceTbl"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageView8"/>
    <TextView
            android:text="Chezz ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cheezQunatity"
            app:layout_constraintTop_toBottomOf="@+id/tomatoSauceQuantity"
            android:textSize="24sp" android:textColor="#ffffff" android:textStyle="italic"
            android:gravity="center" app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="__________________________________________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dividerTxt" android:textColor="#ffffff" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="176dp"/>
    <TextView
            android:background="@color/transparent"
            android:text="Total Amount: Rs.5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totallBillShowtxt" android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="bold|italic" android:gravity="center"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>